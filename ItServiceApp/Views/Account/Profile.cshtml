@model UserProfileViewModel

@{
	ViewBag.Title = $"{Model.Name} {Model.SurName} Profil Sayfası";
}

<!--====== Page Title start ======-->
<partial name="Partials/_PageTitlePartial" />
<!--====== Page Title End ======-->
<!--====== Shoping Checkout Start  ======-->
<section class="shoping-checkout-area section-gap">
	<div class="container">
		<div class="user-actions mb-40">
		</div>
		<form asp-controller="Account" asp-action="Profile" method="post">
			<div class="row">
				<div class="col-lg-12">
					<div class="billing-details">
						<h3 class="title">Profil Bilgileriniz</h3>
						<div class="row">
							<div class="col-lg-6">
								<div class="form-group">
									<label asp-for="Name"> </label>
									<input asp-for="Name" />
									<span asp-validation-for="Name"></span>
								</div>
							</div>
							<div class="col-lg-6">
								<div class="form-group">
									<label asp-for="SurName"> </label>
									<input asp-for="SurName" />
									<span asp-validation-for="SurName"></span>
								</div>
							</div>
							<div class="col-lg-6">
								<div class="form-group">
									<label asp-for="Email"> </label>
									<input asp-for="Email" />
									<span asp-validation-for="Email"></span>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-2">
									<input type="submit" class="btn btn-primary" value="Güncelle" />
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</section>
<!--====== Shoping Checkout End ======-->
@section Styles
    {
<style>
	input {
		border: solid 1px #e3eeff;
		height: 50px;
		padding: 0 15px;
	}
</style>

    }