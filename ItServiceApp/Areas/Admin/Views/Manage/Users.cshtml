@{
	ViewBag.Title = "Tüm Kullanıcılar";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-header">
					<div class="row-align-items-center">
						<div class="col">
							<h4 class="card-title">Kullanıcı Detayları</h4>
						</div>
					</div>
				</div>
				<div class="card-body">
					<div id="dxGrid"></div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts
{
<script src="~/vendor/devextreme-aspnet-data/js/dx.aspnet.data.js"></script>
<script>
	var dataGrid = null;
	$(() =>{
		console.log("Yüklendi");
		var url = '../../../api/userapi';
		dataGrid = $("#dxGrid").dxDataGrid({
			//remoteOperation = true; Bütün Özelliklerini true yapar.
			remoteOperations: {paging: true, filtering: true,sorting:true,
				grouping:true,summary:true,groupPaging:true},
			dataSource: DevExpress.data.AspNet.createStore({
				key: 'id',
				loadUrl: `${url}/get`,
				updateUrl: `${url}/update`,
				//insertUrl: '${url}/InsertOrder',
				//deleteUrl: '${url}/Delete',
				onBeforeSend(method,ajaxOptions){
					ajaxOptions.xhrFields = {withCredentials:true};
					console.log(method);
					console.log(ajaxOptions);
				}
			}),
			editing:{
				mode:'form',
				allowUpdating:true
			},
			allowColumnResizing:true,
			showColumnLines:true,
			showRowLines:true,
			rowAlternationEnabled:true,
			showBorders: true,
			searchPanel: {
				visible:true,
				width:240,
				placeHolder:"Ara..."
			},
			filterRow:{
				visible:true,
				applyFilter:"auto"
			},
			headerFilter:{
				visible:true,
			},
			export:{
				enabled:true,
				fileName: 'Tüm Kullanıcılar_${parseInt(Math.random() * 10000000)}',
				allowExportSelectedData:true
			},
			paging:{
				pageSize:20
			},
			pager:{
				showPageSizeSelector:true,
				allowPageSizes:[5,15,30,45],
				showInfo:true
			},
			selection:{
				mode:"multiple"
			},
			columns:[
				{
					dataField:"id",
					visible: false,
					allowFiltering:false,
					formItem:{visible:false}
				},
				{
					caption: "Ad",
					dataField:"name"
				},
				{
					caption: "Soyad",
					dataField:"surName"
				},
				{
					caption: "Kullanıcı Adı",
					dataField: "userName"
				},
				{
					caption: "Email",
					dataField: "email"
				},
				{
					caption: "Email Onayı",
					dataField: "emailConfirmed",
					dataType:"boolean "
				},
				{
					dataField: "createdDate",
					caption: "Kayıt Tarihi",
					dataType:"date",
					format:'dd/MM/yyyy HH:mm',
					sortOrder:"desc"
				}
			]
		}).dxDataGrid("instance");
	});
</script>
}
